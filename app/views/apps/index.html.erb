<p id="notice"><%= notice %></p>

<h1>Apps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Autor</th>
      <th>Description</th>
      <th>Apptype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.autor %></td>
        <td><%= app.description %></td>
        <td><%= app.appType %></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="window formUserWindow">
  <div class="header">
    <%= image_tag("icons/exe.gif", class: "icon") %>
    sing_up.exe
  </div>
  <div class="content">
    <div class="col-lg-6 margin-top">
      <%= button_tag "SingUp", :class => 'pull-right'%>
    </div>
  </div>
</div>

<br>

